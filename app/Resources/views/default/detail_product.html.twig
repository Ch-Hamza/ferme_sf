{% extends 'base.html.twig' %}

{% block body %}
    {% include 'default/header.html.twig' %}
    <div class="container">
        <div class="row justify-content-center" style="margin-top: 50px;">
            <img class="waggle" src="{{ asset('assets/images/quality2.png') }}" alt="" style="width: 200px;height: 200px;">
        </div>
        <div class="row custom-product-row">
            <div class="col-6 product-image row align-items-center">
                <img class="img-fluid product-custom-image" src="{{ vich_uploader_asset(product,'imageFile') }}" alt="">
            </div>
            <div class="offset-1 col-5 product-col">
                {% if app.request.locale == 'ar' %}
                    <div class="product-name">{{ product.nameAr }}</div>
                {% else %}
                    <div class="product-name">{{ product.name }}</div>
                {% endif %}
                <div class="product-description">{{ 'translate.description'|trans }}</div>
                <br>
                {% if app.request.locale == 'ar' %}
                    <div>{{ product.descriptionAr|raw }}</div>
                {% else %}
                    <div>{{ product.description|raw }}</div>
                {% endif %}
                <br>
                <div class="product-add">
                    <div class="quantity-product">{{ 'translate.quantity'|trans }}</div>
                    {{ form_start(cart_form, {'attr': {'class': 'form-horizontal'}}) }}
                    {{ form_row(cart_form.quantity) }}
                    <a href="">
                        <div class="add-button">
                            <i class="icon-cart"></i>
                            <input type="submit" value="{{ 'translate.addtocart'|trans }}" class="btn">
                        </div>
                    </a>
                    {{ form_rest(cart_form) }}
                    {{ form_end(cart_form) }}
                </div>
            </div>
        </div>
    </div>
    {% include 'default/footer.html.twig' %}
{% endblock %}